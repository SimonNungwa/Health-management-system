{% extends "base.jinja" %}
{% block title %}Recover Password{% endblock %}
{% block content %}
<h2 class="text-xl font-bold mb-4">Recover Your Password</h2>
<form method="POST" class="space-y-4">
  <input type="email" name="email" class="w-full p-2 border rounded" placeholder="Enter your email">
  <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Send Reset Link</button>
</form>
{% endblock %}
